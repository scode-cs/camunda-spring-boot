<process-application xmlns="http://www.camunda.org/schema/1.0/ProcessApplication">
    <process-archive name="scode-process">
        <process-engine>default</process-engine>
        <properties>
            <property name="isDeleteUponUndeploy">false</property>
            <property name="isScanForProcessDefinitions">true</property>
            <property name="additionalResourceSuffixes">html</property>
            <property name="metricsEnabled">true</property>
            <property name="isDeployChangedOnly">true</property>
        </properties>
    </process-archive>
</process-application>